<UserControl x:Class="QuizGame.Controls.InstructionSidebarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignWidth="354"
             mc:Ignorable="d">
    <Grid Width="354">
        <Border Background="Black"
                Opacity="0.2" />
        <StackPanel>
            <Image Width="36"
                   Height="40"
                   Margin="0,65,0,0"
                   HorizontalAlignment="Center"
                   Source="../Assets/Logo100x112.png" />
            <TextBlock Margin="16,28,20,0"
                       Foreground="White"
                       TextWrapping="WrapWholeWords">
                <Span>You have 25 seconds to answer each question.</Span>
                <Span>Your score is based on correct answers and the time you spend responding.</Span>
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
