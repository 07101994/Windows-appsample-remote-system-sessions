<UserControl x:Class="QuizGame.Controls.PlayerItemsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="using:QuizGame.Models"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">
    <Grid>
        <ItemsControl ItemsSource="{x:Bind Players, Mode=TwoWay}">
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="models:Scorecard">
                    <Grid Width="544"
                          Height="44">
                        <StackPanel VerticalAlignment="Center"
                                    Orientation="Horizontal">
                            <!--  Player icon  -->
                            <Grid Margin="8,0,0,0">
                                <StackPanel>
                                    <Grid Width="24"
                                          Height="24">
                                        <Ellipse>
                                            <Ellipse.Fill>
                                                <SolidColorBrush Opacity=".6"
                                                                 Color="LightGray" />
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <TextBlock FontFamily="Segoe UI"
                                                   FontSize="18"
                                                   FontWeight="SemiBold"
                                                   Text="{x:Bind NameIcon}"
                                                   TextAlignment="Center" />
                                    </Grid>
                                </StackPanel>
                            </Grid>
                            <!--  Player name  -->
                            <TextBlock Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       Style="{StaticResource BodyTextBlockStyle}"
                                       Text="{x:Bind PlayerName}" />
                        </StackPanel>
                        <!--  Bottom divider  -->
                        <Line VerticalAlignment="Bottom"
                              Fill="Transparent"
                              Opacity=".3"
                              Stroke="LightGray"
                              X1="0"
                              X2="544" />
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
